@{
    ViewData["Title"] = "Home Page";
}

    <div class="full-screen-background">
        <div class="content text-center">
        <h1 class="display-4"><i class="fas fa-users"></i> Groups</h1>
        </div>
    <div class="container mt-5">
        <!-- Añade 'table-responsive' para hacer la tabla responsiva -->
        <div class="table-responsive">
            <!-- Barra de búsqueda -->
            <form class="row g-2">
                <div class="col-auto">
                    <label for="partNumber" class="visually-hidden"> Codigo</label>
                    <input type="text" class="form-control" id="partNumber" placeholder="Codigo">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-3"><i class="fas fa-search"></i> Buscar</button>
                </div>
            </form>
            <!-- Table -->
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Archivo</th>
                        <th scope="col">Número de parte</th>
                        <th scope="col">Rev</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Nombre completo</th>
                        <th scope="col">BOM</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Table data would be inserted here -->
                    <tr>
                        <td colspan="8" class="text-center">Sin datos para mostrar</td>
                    </tr>
                </tbody>
            </table>
                    <!-- Repite las filas según sea necesario -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Enlaza los archivos JS de Bootstrap y sus dependencias -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    </div>
