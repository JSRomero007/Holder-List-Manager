@{
    ViewData["Title"] = "Home Page";
}

<div class="full-screen-background">
    <div class="content text-center">
        <h1 class="display-4"><i class="fas fa-search"></i> Consult Harness NP</h1>

    </div>

    <div class="container mt-5">
        <!-- Section Title -->
        <h2>Check harness part numbers (TAXI)</h2>

        <!-- Search Form -->
        <form class="row g-3">
            <div class="col-auto">
                <label for="partNumber" class="visually-hidden">Part number :</label>
                <input type="text" class="form-control" id="partNumber" placeholder="Part number:">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3"><i class="fas fa-search"></i> Search</button>
            </div>
        </form>

        <!-- Table -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">File</th>
                    <th scope="col">Part number</th>
                    <th scope="col">Rev</th>
                    <th scope="col">User</th>
                    <th scope="col">date</th>
                    <th scope="col">Name</th>
                    <th scope="col">BOM</th>
                </tr>
            </thead>
            <tbody>
                <!-- Table data would be inserted here -->
                <tr>
                    <td colspan="8" class="text-center">Sin datos para mostrar</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Include Bootstrap Bundle with Popper -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

</div>
